# Configurações do GarageRoute66 para Docker

# ========================================
# CONFIGURAÇÕES GERAIS
# ========================================
DEBUG=False
SECRET_KEY=sua-chave-secreta-super-forte-aqui-com-50-caracteres
ALLOWED_HOSTS=localhost,127.0.0.1,sua-domain.com

# ========================================
# BANCO DE DADOS
# ========================================
DB_NAME=garageroute66
DB_USER=garage_user
DB_PASSWORD=garage_password_super_segura
DB_HOST=db
DB_PORT=5432

# ========================================
# REDIS/CACHE
# ========================================
REDIS_URL=redis://redis:6379/1

# ========================================
# SUPERUSUÁRIO INICIAL
# ========================================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@garageroute66.com
DJANGO_SUPERUSER_PASSWORD=admin123_mude_isso

# ========================================
# CONFIGURAÇÕES DA EMPRESA
# ========================================
COMPANY_NAME=GarageRoute66
COMPANY_ADDRESS=Rua da Oficina, 123 - Centro
COMPANY_PHONE=(11) 99999-9999
COMPANY_EMAIL=contato@garageroute66.com
COMPANY_CNPJ=12.345.678/0001-90

# ========================================
# EMAIL (SMTP)
# ========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-do-app
DEFAULT_FROM_EMAIL=noreply@garageroute66.com

# ========================================
# CONFIGURAÇÕES DE BACKUP
# ========================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ========================================
# CONFIGURAÇÕES DE NOTIFICAÇÃO
# ========================================
SEND_EMAIL_NOTIFICATIONS=False
SEND_SMS_NOTIFICATIONS=False

# ========================================
# SENTRY (MONITORAMENTO DE ERROS)
# ========================================
SENTRY_DSN=https://sua-dsn-do-sentry.ingest.sentry.io/projeto

# ========================================
# PAGINAÇÃO
# ========================================
PAGINATE_BY=20

# ========================================
# CONFIGURAÇÕES DE RELATÓRIOS
# ========================================
ENABLE_REPORTS=True
REPORTS_CACHE_TIMEOUT=3600